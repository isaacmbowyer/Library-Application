@page
@model LibraryLove.Pages.Browser.CreateUserModel;
@{
}


<h1>Sign Up</h1>

<form method="post">
    <input type="hidden" asp-for="record.MemberRole" value="0" />
    <div class="form-group">
        <div class="mb-1">
            <label asp-for="record.Username"></label><sup>*</sup>
        </div>
        <input type="text" asp-for="record.Username" class="form-control" />
        <span asp-validation-for="record.Username" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <div class="mb-1">
            <label asp-for="record.FirstName"></label><sup>*</sup>
        </div>
        <input type="text" asp-for="record.FirstName" class="form-control" />
        <span asp-validation-for="record.FirstName" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <div class="mb-1">
            <label asp-for="record.LastName"></label><sup>*</sup>
        </div>
        <input type="text" asp-for="record.LastName" class="form-control" />
        <span asp-validation-for="record.LastName" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <div class="mb-1">
            <label asp-for="record.Email"></label><sup>*</sup>
        </div>
        <input type="email" asp-for="record.Email" class="form-control" />
        <span asp-validation-for="record.Email" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <div class="mb-1">
            <label asp-for="record.Password"></label><sup>*</sup>
            <div class="custom-tooltip" style="display: inline;">
                <i class="fas fa-info-circle fa-lg"
                   data-toggle="tooltip"
                   data-placement="top"
                   title="<strong>Password Must:</strong> <br /> Contain at least 8 characters <br /> Contain at least 1 number and a special symbol <br/>"></i>
            </div>
        </div>
        <input type="password" asp-for="record.Password" class="form-control" id="password"/>
        <span asp-validation-for="record.Password" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <div class="mb-1">
            <label asp-for="record.ConfirmPassword"></label><sup>*</sup>
        </div>
        <input type="password" asp-for="record.ConfirmPassword" class="form-control" id="password-confirm"/>
        <span asp-validation-for="record.ConfirmPassword" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group row">
        <div class="mb-1 col-12">
            <label asp-for="record.SecurityQuestion"></label><sup>*</sup>
            <div class="custom-tooltip" style="display: inline;">
                <i class="fas fa-info-circle fa-lg"
                   data-toggle="tooltip"
                   data-placement="top"
                   title="Select a Secuirty Question from the list. This is used for additional secuirty"></i>
            </div>
        </div>
        <div class="col-12">
            <select asp-for="record.SecurityQuestion"
                    asp-items="@Html.GetEnumSelectList<LibraryLove.Model.Security>()"
                    class="custom-select mr-sm-2">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="record.SecurityQuestion" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="mb-1">
            <label asp-for="record.SecurityAnswer"></label><sup>*</sup>
        </div>
        <input type="text" asp-for="record.SecurityAnswer" class="form-control" />
        <span asp-validation-for="record.SecurityAnswer" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Add Employee" class="btn btn-primary form-control" />
    </div>
</form>



@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.querySelector('.submitBtn').addEventListener('click', (e) => {
            let password = document.getElementById('password');
            if (password.value == "") {
                document.getElementBy('password-error').innerHTML = "Password is required";
            } else {
                document.querySelector('form').submit();
            }
        });

        $(function () {
            $('[data-toggle="tooltip"]').tooltip({ html: true });
        });
    </script>
}

