@page
@model LibraryLove.Pages.Browser.LogInModel
@{
    ViewData["Title"] = "Log In";
}


<div class="text-center">
    <form method="post">
        <div class="form-group">
            <label asp-for="MemberRecord.Username"></label>
            <input asp-for="MemberRecord.Username" class="form-control" />
            <span asp-validation-for="MemberRecord.Username" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="MemberRecord.Password"></label>
            <input type="password" asp-for="MemberRecord.Password" class="form-control" />
            <span asp-validation-for="MemberRecord.Password" class="text-danger"></span>
        </div>
        <br />
        <input type="submit" class="btn form-control" value="Log in" />
    </form>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}  