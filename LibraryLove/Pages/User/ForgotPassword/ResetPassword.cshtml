@page
@model LibraryLove.Pages.User.ForgotPassword.ResetPasswordModel
@{
}

<h1>Reset Password</h1>

<form method="post">
    <div class="form-group">
        <div class="mb-1">
            <label asp-for="NewUser.Password"></label><sup>*</sup>
            <div class="custom-tooltip" style="display: inline;">
                <i class="fas fa-info-circle fa-lg"
                   data-toggle="tooltip"
                   data-placement="top"
                   title="<strong>Password Must:</strong> <br /> Contain at least 8 characters <br /> Contain at least 1 number and a special symbol <br/>"></i>
            </div>
        </div>
        <input type="password" asp-for="NewUser.Password" class="form-control" />
        <span asp-validation-for="NewUser.Password" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <div class="mb-1">
            <label asp-for="NewUser.ConfirmPassword"></label><sup>*</sup>
        </div>
        <input type="password" asp-for="NewUser.ConfirmPassword" class="form-control" />
        <span asp-validation-for="NewUser.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Reset Password" class="btn  form-control" />
    </div>
</form>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip({ html: true });
        });
    </script>

}