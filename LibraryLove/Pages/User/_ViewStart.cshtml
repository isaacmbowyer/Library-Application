@using Microsoft.AspNetCore.Http;
@{
    string Role = Html.ViewContext.HttpContext.Session.GetString("role");
    if (Role == "Customer")
    {
        Layout = "_CustomerLayout";
    }

    else if(Role == "Librarian")
    {
        Layout = "_LibrarianLayout";
    }
    else if(Role == "Admin")
    {

        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_BrowserLayout";
    }


}
