@page
@model AdminProject.Pages.Members.CreateModel

@{
    ViewData["Title"] = "Add a Employer";
}

<h1>Add a Employee</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserRecord.Username" class="control-label"></label>
                <input asp-for="UserRecord.Username" class="form-control" />
                <span asp-validation-for="UserRecord.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRecord.FirstName" class="control-label"></label>
                <input asp-for="UserRecord.FirstName" class="form-control" />
                <span asp-validation-for="UserRecord.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRecord.LastName" class="control-label"></label>
                <input asp-for="UserRecord.LastName" class="form-control" />
                <span asp-validation-for="UserRecord.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRecord.Email" class="control-label"></label>
                <input type="email" asp-for="UserRecord.Email" class="form-control" />
                <span asp-validation-for="UserRecord.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRecord.Password" class="control-label"></label>
                <input type="password" asp-for="UserRecord.Password" class="form-control" />
                <span asp-validation-for="UserRecord.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRecord.Role" class="control-label"></label>
                <input list="Roles" asp-for="UserRecord.Role" class="form-control" />
                <datalist id="Roles">
                    <option value="Librarian"></option>
                    <option value="Admin"></option>
                </datalist>
                <span asp-validation-for="UserRecord.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
